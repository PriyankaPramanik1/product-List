<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <title><%= title %></title>
</head>

<body class="bg-light">

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-lg">
          <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Edit Product</h3>
          </div>
          <div class="card-body p-4">
            <form action="/edit/products/<%= data._id %>" method="POST">
              
              <!-- Product Name -->
              <div class="form-group mb-3">
                <label for="productName" class="font-weight-bold">Product Name</label>
                <input type="text" class="form-control form-control-lg" id="productName" 
                  name="product_name"
                  value="<%= data.product_name %>" required>
              </div>

              <!-- Product Size -->
              <div class="form-group mb-3">
                <label for="productSize" class="font-weight-bold">Product Size</label>
                <input type="text" class="form-control form-control-lg" id="productSize" 
                  name="product_size"
                  value="<%= data.product_size %>" required>
              </div>

              <!-- Product Color -->
              <div class="form-group mb-3">
                <label for="productColor" class="font-weight-bold">Product Color</label>
                <input type="text" class="form-control form-control-lg" id="productColor" 
                  name="product_color"
                  value="<%= data.product_color %>" required>
              </div>

              <!-- Select User -->
              <div class="form-group mb-4">
                <label for="userSelect" class="font-weight-bold">Select User</label>
                <select class="form-control form-control-lg" id="userSelect" name="user_id" required>
                  <% user.forEach((userItem)=> { %>
                    <option value="<%= userItem._id %>" 
                      <% if (data.user_id && userItem._id && userItem._id.toString() === data.user_id.toString()) { %> 
                        selected 
                      <% } %>>
                      <%= userItem.name %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <!-- Submit Button -->
              <button type="submit" class="btn btn-primary btn-lg btn-block">
                Save Changes
              </button>
            </form>
          </div>
          
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
    crossorigin="anonymous"></script>
</body>
</html>
